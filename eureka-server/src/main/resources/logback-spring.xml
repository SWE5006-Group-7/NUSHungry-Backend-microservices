<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- 服务名称 -->
    <springProperty scope="context" name="serviceName" source="spring.application.name" defaultValue="eureka-server"/>

    <!-- Logstash主机和端口 -->
    <springProperty scope="context" name="logstashHost" source="logstash.host" defaultValue="localhost"/>
    <springProperty scope="context" name="logstashPort" source="logstash.port" defaultValue="5000"/>

    <!-- 环境标识 -->
    <springProperty scope="context" name="environment" source="spring.profiles.active" defaultValue="dev"/>

    <!-- 控制台输出（本地开发）-->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [${serviceName}] %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 文件输出（备份）-->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/app/logs/${serviceName}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/app/logs/${serviceName}-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [${serviceName}] %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Logstash输出（JSON格式）-->
    <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
        <destination>${logstashHost}:${logstashPort}</destination>

        <!-- JSON编码器 -->
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <!-- 自定义字段 -->
            <customFields>{"service_name":"${serviceName}","environment":"${environment}"}</customFields>

            <!-- 包含MDC（Mapped Diagnostic Context）数据 -->
            <includeMdc>true</includeMdc>

            <!-- 包含上下文名称 -->
            <includeContext>true</includeContext>

            <!-- 包含调用者信息（性能开销较大，生产环境可关闭）-->
            <includeCallerData>false</includeCallerData>

            <!-- 时间戳格式 -->
            <timestampPattern>yyyy-MM-dd'T'HH:mm:ss.SSS'Z'</timestampPattern>
        </encoder>

        <!-- 连接超时 -->
        <connectionTimeout>5000</connectionTimeout>

        <!-- 重连延迟 -->
        <reconnectionDelay>10000</reconnectionDelay>

        <!-- 写入超时 -->
        <writeTimeout>5000</writeTimeout>

        <!-- 异步发送（提高性能）-->
        <keepAliveDuration>5 minutes</keepAliveDuration>
    </appender>

    <!-- 异步Logstash appender（提高性能，避免阻塞）-->
    <appender name="ASYNC_LOGSTASH" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="LOGSTASH"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
    </appender>

    <!-- Spring框架日志级别 -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.springframework.cloud" level="INFO"/>

    <!-- Eureka日志 -->
    <logger name="com.netflix.eureka" level="DEBUG"/>
    <logger name="com.netflix.discovery" level="DEBUG"/>

    <!-- 应用日志级别 -->
    <logger name="com.nushungry" level="DEBUG"/>

    <!-- 根日志级别配置 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <!-- Logstash暂时禁用,避免连接失败警告 -->
        <!-- <appender-ref ref="ASYNC_LOGSTASH"/> -->
    </root>

    <!-- 生产环境配置（可选）-->
    <springProfile name="prod">
        <root level="WARN">
            <appender-ref ref="FILE"/>
            <!-- <appender-ref ref="ASYNC_LOGSTASH"/> -->
        </root>
    </springProfile>

    <!-- 开发环境配置（可选）-->
    <springProfile name="dev">
        <root level="DEBUG">
            <appender-ref ref="CONSOLE"/>
            <!-- <appender-ref ref="ASYNC_LOGSTASH"/> -->
        </root>
    </springProfile>
</configuration>
