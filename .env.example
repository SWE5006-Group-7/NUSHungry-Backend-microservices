# ==================== 数据库配置 ====================

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# MongoDB
MONGO_USER=admin
MONGO_PASSWORD=admin123

# ==================== 消息队列配置 ====================

# RabbitMQ
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# ==================== 对象存储配置 ====================

# MinIO
MINIO_USER=minioadmin
MINIO_PASSWORD=minioadmin

# ==================== 应用配置 ====================

# Spring Profile (dev, test, prod)
SPRING_PROFILES_ACTIVE=prod

# JWT Secret (生产环境请修改为强密码)
JWT_SECRET=your-secret-key-change-in-production-min-256-bits

# ==================== Config Server 配置 ====================

# Config Server 认证
CONFIG_SERVER_USERNAME=config
CONFIG_SERVER_PASSWORD=config123

# Git 仓库配置（用于 Config Server）
# 本地开发使用 file:// 协议，生产环境使用远程仓库
CONFIG_GIT_URI=https://github.com/SWE5006-Group-7/NUSHungry-config.git
CONFIG_GIT_BRANCH=main
CONFIG_GIT_USERNAME=your-github-username
CONFIG_GIT_PASSWORD=your-github-token-or-password
CONFIG_FORCE_PULL=false

# Eureka Server 配置
EUREKA_USERNAME=eureka
EUREKA_PASSWORD=eureka

# ==================== 端口配置 ====================

# 微服务端口
# admin-service: 8082
# cafeteria-service: 8083
# review-service: 8084
# media-service: 8085
# preference-service: 8086

# 基础设施端口
# PostgreSQL: 5432
# MongoDB: 27017
# RabbitMQ: 5672 (AMQP), 15672 (Management UI)
# MinIO: 9000 (API), 9001 (Console)
